<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertial_macros.xacro" />

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1"/>
    </material>

    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>

    <material name="red">
        <color rgba="1 0 0 1"/>
    </material>

    <!-- Base Link -->

    <link name="base_link">
    </link>

     <!-- BASE_FOOTPRINT LINK -->

    <link name="base_footprint">
    </link> 

    <joint name="base_footprint_joint" type="fixed">
        <parent link="base_link"/>
        <child link="base_footprint"/>
        <origin xyz="0 0 0" rpy="0 0 3.14159265359"/>
    </joint>

    <!-- Chassis Link -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link"/>
        <child link="chassis"/>
        <origin xyz="0 0 0"/>
    </joint>

    <link name="chassis">
        <visual>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.21 0.15 0.10"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0 0 0.05" rpy="0 0 0"/>
            <geometry>
                <box size="0.21 0.15 0.10"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.3" x="0.21" y="0.15" z="0.10">
            <origin xyz="0.15 0 0.05" rpy="0 0 0"/>
        </xacro:inertial_box>
    </link>

    <gazebo reference="chassis">
        <material>Gazebo/White</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
    </gazebo>

    <!-- LEFT FRONT WHEEL -->

    <joint name="left_front_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="left_front_wheel"/>
        <origin xyz="-0.08 -0.085 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_front_wheel" type="revolute">
        <visual>
            <geometry>
                <cylinder length="0.018" radius="0.0225" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0225" />
            </geometry>
        </collision> 
        <xacro:inertial_cylinder mass="0.1" length="0.018" radius="0.0225">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_front_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
    </gazebo>
    

    <!-- LEFT REAR WHEEL -->

    <joint name="left_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_rear_wheel"/>
        <origin xyz="0.08 -0.085 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_rear_wheel" type="revolute">
        <visual>
            <geometry>
                <cylinder length="0.018" radius="0.0225" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0225" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.018" radius="0.0225">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="left_rear_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
    </gazebo>

    <!-- RIGHT FRONT WHEEL -->

    <joint name="right_front_wheel_joint" type="fixed">
        <parent link="base_link"/>
        <child link="right_front_wheel"/>
        <origin xyz="-0.08 0.085 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_front_wheel" type="revolute">
        <visual>
            <geometry>
                <cylinder length="0.018" radius="0.0225" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0225" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.018" radius="0.0225">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_front_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
    </gazebo>

    <!-- RIGHT REAR WHEEL -->

    <joint name="right_rear_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_rear_wheel"/>
        <origin xyz="0.08 0.085 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="right_rear_wheel" type="revolute">
        <visual>
            <geometry>
                <cylinder length="0.018" radius="0.0225" />
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere radius="0.0225" />
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.018" radius="0.0225">
            <origin xyz="0 0 0" rpy="0 0 0"/>
        </xacro:inertial_cylinder>
    </link>

    <gazebo reference="right_rear_wheel">
        <material>Gazebo/Black</material>
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
    </gazebo>


</robot>
